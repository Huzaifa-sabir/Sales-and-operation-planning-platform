# Application Settings
APP_NAME="S&OP Portal API"
APP_VERSION="1.0.0"
DEBUG=True
API_V1_PREFIX="/api/v1"

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=sop_portal

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=480

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@heavygarlic.com
SMTP_FROM_NAME=Heavy Garlic S&OP Portal
EMAIL_ENABLED=False

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# S&OP Configuration
DEFAULT_FORECAST_MONTHS=16
MANDATORY_FORECAST_MONTHS=12
CYCLE_REMINDER_DAYS=5

# Admin User (Initial Setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@heavygarlic.com
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=Admin User
